#!/bin/bash -e

<%
def field_present?(field)
  !p(field).to_s.empty?
end

def required_fields(type)
  required_fields_common = [
    'service-backup.source_folder',
    'service-backup.source_executable',
    'service-backup.cron_schedule'
  ]

  required_fields_s3 = required_fields_common + [
    'service-backup.destination.s3.access_key_id',
    'service-backup.destination.s3.secret_access_key',
    'service-backup.destination.s3.bucket_name',
    'service-backup.destination.s3.bucket_path'
  ]

  required_fields_scp = required_fields_common + [
    'service-backup.destination.scp.server',
    'service-backup.destination.scp.user',
    'service-backup.destination.scp.destination',
    'service-backup.destination.scp.key'
  ]

  required_fields_azure = required_fields_common + [
    'service-backup.destination.azure.storage_account',
    'service-backup.destination.azure.storage_access_key',
    'service-backup.destination.azure.container',
    'service-backup.destination.azure.path'
  ]

  case type
  when 'scp'
    required_fields_scp
  when 's3'
    required_fields_s3
  when 'azure'
    required_fields_azure
  else
    raise 'Invalid config - invalid destination type '+type
  end
end

def destination_type
  filtered_not_nil_config.keys.first
end

def filtered_not_nil_config
  p('service-backup.destination').select do |type, properties|
    properties.values.count {|x| x != nil} > 0
  end
end

# Provides a more user-friendly error message when user meant to disable
# backups, but forgot to set Backup VM instances to 0
def verify_config_is_valid
  return if filtered_not_nil_config.empty?

  if filtered_not_nil_config.size > 1
    raise "Invalid config - You can only specify one backup destination in the manifest."
  end

  missing_fields = []
  required_fields(destination_type).each do |field|
    missing_fields << field unless field_present?(field)
  end

  if !missing_fields.empty?
    custom_msg = p('service-backup.missing_properties_message')
    raise "Invalid config - Missing values for #{missing_fields.join(", ")}.\n#{custom_msg}"
  end
end

verify_config_is_valid
%>

mkdir -p /var/vcap/sys/log/monit

exec 1>> /var/vcap/sys/log/monit/service-backup.log
exec 2>> /var/vcap/sys/log/monit/service-backup.err.log

log(){
  message=$1
  echo "$(date +"%Y-%m-%d %H:%M:%S") ----- $message"
}

RUN_DIR=/var/vcap/sys/run/service-backup
LOG_DIR=/var/vcap/sys/log/service-backup
PIDFILE=${RUN_DIR}/pid

<% if destination_type == 'scp' %>
  PRIVATE_KEY_PATH=/var/vcap/data/backups.key
  echo '<%= p('service-backup.destination.scp.key') %>' > $PRIVATE_KEY_PATH
  chmod 400 $PRIVATE_KEY_PATH

  SCP_PORT=<%= p('service-backup.destination.scp.port') %>
  SCP_SERVER='<%= p('service-backup.destination.scp.server') %>'

  KNOWN_HOSTS=/root/.ssh/known_hosts
  KNOWN_HOSTS_TMP=${KNOWN_HOSTS}.tmp
  mkdir -p $(dirname $KNOWN_HOSTS)
  ssh-keyscan -p $SCP_PORT $SCP_SERVER >> $KNOWN_HOSTS
  sort -u $KNOWN_HOSTS > $KNOWN_HOSTS_TMP
  mv $KNOWN_HOSTS_TMP $KNOWN_HOSTS
<% end %>

SOURCE_FOLDER='<%= p('service-backup.source_folder') %>'

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR
    echo $$ > $PIDFILE

    mkdir -p "${SOURCE_FOLDER}"

    log "start script: starting service-backup"
    exec /var/vcap/packages/service-backup/bin/service-backup \
        --cron-schedule '<%= p('service-backup.cron_schedule') %>' \
        --backup-creator-cmd '<%= p('service-backup.source_executable') %>' \
        --source-folder "${SOURCE_FOLDER}" \
        --cleanup-cmd '<%= p('service-backup.cleanup_executable') %>' \
        <% if destination_type == 's3' %> \
        --dest-path '<%= p('service-backup.destination.s3.bucket_path') %>' \
        --aws-access-key-id '<%= p('service-backup.destination.s3.access_key_id') %>' \
        --aws-secret-access-key '<%= p('service-backup.destination.s3.secret_access_key') %>' \
        --endpoint-url '<%= p('service-backup.destination.s3.endpoint_url') %>' \
        --aws-cli-path /var/vcap/packages/aws-cli/bin/aws \
        --dest-bucket '<%= p('service-backup.destination.s3.bucket_name') %>' \
        <% end %> \
        <% if destination_type == 'scp' %> \
        --dest-path '<%= p('service-backup.destination.scp.destination') %>' \
        --ssh-host "${SCP_SERVER}" \
        --ssh-port "${SCP_PORT}" \
        --ssh-user '<%= p('service-backup.destination.scp.user') %>' \
        --ssh-private-key-path "$PRIVATE_KEY_PATH" \
        <% end %> \
        <% if destination_type == 'azure' %> \
        --dest-path '<%= p('service-backup.destination.azure.path') %>' \
        --azure-storage-account '<%= p('service-backup.destination.azure.storage_account') %>' \
        --azure-storage-access-key '<%= p('service-backup.destination.azure.storage_access_key') %>' \
        --azure-container '<%= p('service-backup.destination.azure.container') %>' \
        --azure-blob-store-base-url '<%= p('service-backup.destination.azure.blob_store_base_url', '') %>' \
        <% end %> \
        2>&1 >> "$LOG_DIR/out.log"

    log "start script: completed starting service-backup"
    ;;

  stop)
    log "stop script: stopping service-backup"
    kill -9 `cat $PIDFILE`
    rm -f $PIDFILE
    log "stop script: completed stopping service-backup"
    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
