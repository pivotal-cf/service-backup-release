#!/bin/bash

<%
# Provides a more user-friendly error message when user meant to disable
# backups, but forgot to set Backup VM instances to 0
def verify_config_is_valid

  required_fields = [
    'service-backup.blobstore.access_key_id',
    'service-backup.blobstore.secret_access_key',
    'service-backup.blobstore.bucket_name',
    'service-backup.blobstore.bucket_path',
    'service-backup.source_folder',
    'service-backup.source_executable',
    'service-backup.cron_schedule'
  ]

  missing_fields = []
  required_fields.each do |field|
    missing_fields << field unless field_present?(field)
  end

  if missing_fields.empty? == false
    raise <<-eof
Invalid config - Missing values for #{missing_fields.join(", ")}.
Provide these missing fields in your manifest, or set Backup VM instances to 0 to disable backups.
eof
  end
end

def field_present?(field)
    if_p(field) do |_|
      return true
    end
    return false
end
%>

<% verify_config_is_valid %>

set -e

mkdir -p /var/vcap/sys/log/monit

exec 1>> /var/vcap/sys/log/monit/service-backup.log
exec 2>> /var/vcap/sys/log/monit/service-backup.err.log

log(){
  message=$1
  echo "$(date +"%Y-%m-%d %H:%M:%S") ----- $message"
}

RUN_DIR=/var/vcap/sys/run/service-backup
LOG_DIR=/var/vcap/sys/log/service-backup
PIDFILE=${RUN_DIR}/pid

AWS_ACCESS_KEY_ID="<%= p('service-backup.blobstore.access_key_id') %>"
AWS_SECRET_ACCESS_KEY="<%= p('service-backup.blobstore.secret_access_key') %>"
BUCKET_NAME="<%= p('service-backup.blobstore.bucket_name') %>"
BUCKET_PATH="<%= p('service-backup.blobstore.bucket_path') %>"
BLOBSTORE_ENDPOINT_URL="<%= p('service-backup.blobstore.endpoint_url') %>"
SOURCE_FOLDER="<%= p('service-backup.source_folder') %>"
SOURCE_EXECUTABLE="<%= p('service-backup.source_executable') %>"
CLEANUP_EXECUTABLE="<%= p('service-backup.cleanup_executable') %>"
CRON_SCHEDULE="<%= p('service-backup.cron_schedule') %>"
MAX_RETRIES="<%= p('service-backup.max_retries') %>"

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR
    echo $$ > $PIDFILE

    mkdir -p "${SOURCE_FOLDER}"

    log "start script: starting service-backup"
    exec /var/vcap/packages/service-backup/bin/service-backup \
        --aws-access-key-id "${AWS_ACCESS_KEY_ID}" \
        --aws-secret-access-key "${AWS_SECRET_ACCESS_KEY}" \
        --source-folder "${SOURCE_FOLDER}" \
        --dest-bucket "${BUCKET_NAME}" \
        --dest-path "${BUCKET_PATH}" \
        --endpoint-url "${BLOBSTORE_ENDPOINT_URL}" \
        --backup-creator-cmd "${SOURCE_EXECUTABLE}" \
        --cleanup-cmd "${CLEANUP_EXECUTABLE}" \
        --cron-schedule "${CRON_SCHEDULE}" \
        --max-retries "${MAX_RETRIES}" \
        2>&1 >> "$LOG_DIR/out.log"

    log "start script: completed starting service-backup"
    ;;

  stop)
    log "stop script: stopping service-backup"
    kill -9 `cat $PIDFILE`
    rm -f $PIDFILE
    log "stop script: completed stopping service-backup"
    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
