#!/bin/bash

RUN_DIR=/var/vcap/sys/run/service-backup
LOG_DIR=/var/vcap/sys/log/service-backup
PIDFILE=${RUN_DIR}/pid

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR
    echo $$ >> $PIDFILE

    while true; do
      echo "Hello from Service backup" >> $LOG_DIR/service-backup.log
      sleep 10
    done
    ;;

  stop)
    kill -9 `cat $PIDFILE`
    rm -f $PIDFILE
    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
